# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

target 'pod-install-test' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for codegen-cli-issue
  if ENV['GITHUB_REPOSITORY'] != 'apollographql/apollo-ios'
    pod 'Apollo', :git => "https://github.com/#{ENV['GITHUB_REPOSITORY']}.git", :commit => ENV['GITHUB_SHA']
    pod 'ApolloTestSupport', :git => "https://github.com/#{ENV['GITHUB_REPOSITORY']}.git", :commit => ENV['GITHUB_SHA']
  else
    pod 'Apollo', :git => 'https://github.com/apollographql/apollo-ios.git', :branch => ENV['GITHUB_HEAD_REF']
    pod 'ApolloTestSupport', :git => 'https://github.com/apollographql/apollo-ios.git', :branch => ENV['GITHUB_HEAD_REF']
  end
end
